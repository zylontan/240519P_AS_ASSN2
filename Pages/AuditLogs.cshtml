@page
@model _240519P_AS_ASSN2.Pages.AuditLogsModel
@{
    ViewData["Title"] = "Audit Logs";
}

<h2>Audit Logs</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Timestamp</th>
            <th>User ID</th>
            <th>Action</th>
            <th>IP Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model.Logs)
        {
            <tr>
                <td>@log.Timestamp.ToLocalTime()</td>
                <td>@log.UserId</td>
                <td>@log.Action</td>
                <td>@log.IpAddress</td>
            </tr>
        }
    </tbody>
</table>
